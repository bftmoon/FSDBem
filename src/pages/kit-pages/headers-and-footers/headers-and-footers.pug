include ../../../kit/blocks/kit-header/kit-header
include ../../../kit/blocks/header/header
include ../../../kit/blocks/footer/footer
include ../../../kit/blocks/simple-footer/simple-footer

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="initial-scale=1.0, width=device-width")
    title Headers and footers
  body.header-footers-page
    - const {home, links, login, register} = require(`./json/header.json`)
    - const {tagline, menu, subscribe, copyright} = require(`./json/footer.json`)
    .header-footers-page__header
      +kit-header
    .header-footers-page__item
      +header({home, links, login, register})
    .header-footers-page__item
      +header({home, links, login, register, username: 'Cosmin Negoita'})
    .header-footers-page__item
      +footer({tagline, menu, subscribe, copyright})
    .header-footers-page__item
      +simple-footer({tagline})
