extends ../layout/layout

block body
  include ../../../kit/blocks/kit-header/kit-header
  include ../../../kit/blocks/search-card/search-card
  include ../../../kit/blocks/registration-card/registration-card
  include ../../../kit/blocks/calculator-card/calculator-card
  include ../../../kit/blocks/login-card/login-card
  include ../../../kit/blocks/room-card/room-card
  include ../../../kit/blocks/dropdown-date/dropdown-date

  body.cards
    +kit-header.cards__header
    main.cards__main
      .cards__wrapper-for-chrome
        +search-card
      .cards__wrapper-for-chrome
        +registration-card
      .cards__wrapper-for-chrome
        +calculator-card({
          room: {
            number: 888,
            price: 9990,
            isLux: true
          },
          options: {
            startDate: 1566162000000,
            endDate: 1566507600000,
            daysCount: 4,
            guests: [2, 1, 0]
          },
          costs: {
            service: 0,
            discount: 2179,
            overService: 300,
          }
        })
      .cards__wrapper-for-chrome
        +login-card
      .cards__wrapper-for-chrome.cards__calendar
        +dropdown-date([{}], true)
      .cards__wrapper-for-chrome
        - const importedImg = require("./images/room-1.jpg").default;
        +room-card({
          imgs: [
            {src: importedImg, alt: "room"},
            {src: importedImg, alt: "room"},
            {src: importedImg, alt: "room"},
            {src: importedImg, alt: "room"},
          ],
          number: 888,
          price: 9990,
          isLux: true,
          rating: 5,
          reviewCount: 145
        })
      .cards__wrapper-for-chrome
        - const otherImportedImg = require("./images/room-2.jpg").default;
        +room-card({
          imgs: [
            {src: otherImportedImg, alt: "room"},
            {src: otherImportedImg, alt: "room"},
            {src: otherImportedImg, alt: "room"},
            {src: otherImportedImg, alt: "room"},
          ],
          number: 840,
          price: 9900,
          rating: 4,
          reviewCount: 65
        })
