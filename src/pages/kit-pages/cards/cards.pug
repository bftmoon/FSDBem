extends ../layout/layout

block body
  include ../../../kit/blocks/kit-header/kit-header
  include ../../../kit/blocks/search-card/search-card
  include ../../../kit/blocks/registration-card/registration-card
  include ../../../kit/blocks/calculator-card/calculator-card
  include ../../../kit/blocks/login-card/login-card
  include ../../../kit/blocks/room-card/room-card
  include ../../../kit/blocks/dropdown-date/dropdown-date

  body.cards-example
    +kit-header.cards-example__header
    main.cards-example__main
      .cards-example__wrapper-for-chrome
        +search-card
      .cards-example__wrapper-for-chrome
        +registration-card
      .cards-example__wrapper-for-chrome
        +calculator-card({
          room: {
            number: 888,
            price: "9 990₽",
            isLux: true
          },
          options: {
            startDate: "19.08.2019",
            endDate: "23.08.2019",
            daysCount: 4,
            guests: [2, 1, 0]
          },
          costs: {
            cleanPrice: "39 960₽",
            service: "0₽",
            discount: "2 179₽",
            overService: "300₽",
            summary: "38 081₽"
          }
          })
      .cards-example__wrapper-for-chrome
        +login-card
      .cards-example__wrapper-for-chrome.cards-example__calendar
        +dropdown-date([{}], true)
      .cards-example__wrapper-for-chrome
        - const importedImg = require("./images/room-1.jpg").default;
        +room-card({
         imgs: [
           {src: importedImg , alt: "room"},
           {src: importedImg , alt: "room"},
           {src: importedImg , alt: "room"},
           {src: importedImg , alt: "room"},
         ],
         number: 888,
         price: "9 990₽",
         isLux: true,
         rating: 5,
         reviewCount: 145
         })
      .cards-example__wrapper-for-chrome
        - const otherImportedImg = require("./images/room-2.jpg").default;
        +room-card({
          imgs: [
            {src: otherImportedImg, alt: "room"},
            {src: otherImportedImg, alt: "room"},
            {src: otherImportedImg, alt: "room"},
            {src: otherImportedImg, alt: "room"},
          ],
          number: 840,
          price: "9 900₽",
          rating: 4,
          reviewCount: 65
          })
