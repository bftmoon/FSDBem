doctype html
html(lang="en")
  include ../../../kit/kit
  head
    meta(charset="UTF-8")
    title UIKit
  body
    -
      const simpleCheckboxData = [
        {text: 'Завтрак'},
        {text: 'Письменный стол', attributes: {checked: true}},
        {text: 'Стул для кормления', attributes: {checked: true}},
        {text: 'Кроватка', attributes: {checked: true}},
        {text: 'Телевизор'},
        {text: 'Шампунь'},
        {text: 'Телевизор'},
        {text: 'Шампунь'},
      ];

    main.fields-example
      .fields-example__inputs
        +input({title: 'Text field', subtitle: 'Default'})(placeholder='Email' type='email')
        +input({title: 'Text field', subtitle: 'Hover/focus'})(value='This is pretty awesome')
        +guests-dropdown({title: 'Dropdown', subtitle: 'Default'})
        +input({title: 'Masked text field'})(placeholder='ДД.ММ.ГГГГ' pattern='(\\d{2}\\.){2}\\d{4}$')
        +dropdown-date([{title: 'Date dropdown'}, {title: 'Date dropdown', date: '19.08.2019'}])
        +dropdown-date([{title: 'Filter date dropdown'}])
        h3 Subscription text field
        +subscribe-input
      .fields-example__simple-checkables
        +checkbox-list({
          title: 'Checkbox buttons',
          items: [
            {
              text: 'Можно курить',
              attributes: {
                name: '?',
                value: 'smoke'
              }
            },
            {
              text: 'Можно с питомцами',
              attributes: {
                name: '?',
                value: 'pet',
                checked: true
              }
            },
            {
              text: 'Можно пригласить гостей (до 10 человек)',
              attributes: {
                name: '?',
                value: 'visiters',
                checked: 'checked'
              }
            },
          ]
        })
        +radio-list({
          title: 'Radio buttons',
          items: [
            {
              text: 'Мужчина',
              attributes: {
                value: 'M',
                name: 'gender',
                checked: true
              }
            },
            {
              text: 'Женщина',
              attributes: {
                value: 'W',
                name: 'gender'
              }
            }
          ]
        })
        h3 Toggle
        +toggle('Получать спецпредложения')(checked)
        +toggle('Получать спецпредложения')
        h3 Like button
        +like-button(2)
        +like-button(12)(checked)
        h3 Rate button
        +rating({rating: 4, groupName: 'star-1'})
        +rating({rating: 5, groupName: 'star-2'})
      .fields-example__clickables
        +slider({title: 'Price range'})
        h3 Buttons
        +button('Click me', {})
        +button('Click me', {})(disabled)
        +button('Click me', {isFlat: true})
        +button('Click me', {isFlat: true})(disabled)
        +a('Click me')(href='#')
        +a('Click me')
        +button('Перейти к оплате', {isArrowed: true})
        h3 Pagination
        +paginator('1 – 12 из 100+ вариантов аренды')
      .fields-example__dropdown-conditions
        +furniture-dropdown({title: 'Dropdown', subtitle: 'Default'})
        +furniture-dropdown({title: 'Dropdown', subtitle: 'Expanded', isOpened: true, isInline: true})
      .fields-example__dropdown-with-confirm
        +guests-dropdown({
          title: 'Dropdown',
          isOpened: true,
          isInline: true,
          withConfirm: true
        })
      .fields-example__dropdown-with-cancel
        +guests-dropdown({
          counts: [2, 1, 0],
          title: 'Dropdown',
          isOpened: true,
          isInline: true,
          withConfirm: true,
          withCancel: true
        })
      .fields-example__expandable-checkboxes
        +checkbox-list({items: simpleCheckboxData, expandTitle: 'Expandable checkbox list'})
        +checkbox-list({items: simpleCheckboxData, expandTitle: 'Expandable checkbox list', isOpened: true})
      .fields-example__rich-checkboxes
        +checkbox-list({
          title: 'Rich checkbox buttons',
          items: [
            {
              text: 'Широкий коридор',
              description: 'Ширина коридоров в номере не менее 91 см.'
            },
            {
              text: 'Помощник для инвалидов',
              description: 'На 1 этаже вас встретит специалист и проводит до номера.'
            },
          ]
        })
      .fields-example__bullets
        +bullet-list({
          title: 'Bullet list',
          items: [
            'Нельзя с питомцами',
            'Без вечеринок и меропреятий',
            'Время прибытия — после 13:00, а выезд до 12:00'
          ]
        })
      .fields-example__iconed-list
        +iconed-list([
          {
            icon: 'insert_emoticon',
            title: 'Комфорт',
            description: 'Шумопоглощающие стены'
          },
          {
            icon: 'location_city',
            title: 'Удобство',
            description: 'Окно в каждой из спален'
          },
        ])
      .fields-example__feedback
        +feedback(
          {
            img: {srcName: 'man.png', alt: 'Somebody'},
            name: 'Мурад Сарафанов',
            time: '5 дней назад',
            text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
            like: {count: 12, active: true}
          })







