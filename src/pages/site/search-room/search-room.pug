doctype html
html(lang="en")
  include ../../../kit/kit
  head
    meta(charset="UTF-8")
    title Search Room
  body.search-page
    +header({})
    main.search-page__main
      - const {rooms} = require('./rooms.json')
      +float-button('more_horiz')
      section.search-page__configuration.js-search-page__configuration
        +dropdown-date([{title: 'Даты пребывания в отеле'}])
        +guests-dropdown({title: 'Гости'})
        +slider({title: 'Диапазон цены'})
        .search-page__cost-info Стоимость за сутки пребывания в номере
        +checkbox-list({
          title: 'Условия', items: [
            {text: 'Можно курить'},
            {text: 'Можно с питомцами'},
            {text: 'Можно пригласить гостей (до 10 человек)'},
          ]
        })
        +checkbox-list({
          title: 'Доступность',
          items: [
            {
              text: 'Широкий коридор',
              description: 'Ширина коридоров в номере не менее 91 см.'
            },
            {
              text: 'Помощник для инвалидов',
              description: 'На 1 этаже вас встретит специалист и проводит до номера.'
            },
          ]
        })
        +furniture-dropdown({title: 'Удобства номера'})
        +checkbox-list({
          items: [
            {text: 'Завтрак'},
            {text: 'Письменный стол'},
            {text: 'Стул для кормления'},
            {text: 'Кроватка'},
            {text: 'Телевизор'},
            {text: 'Шампунь'},
            {text: 'Телевизор'},
            {text: 'Шампунь'},
          ], expandTitle: 'Дополнительные удобства'
        })
      section.search-page__results
        h2 Номера, которые мы для вас подобрали
        .search-page__rooms
          - i=0;
          while i < 12
            +room-card(rooms[i]).search-page__room
            - i++
        .search-page__paginator-wrapper
          +paginator('1 – 12 из 100+ вариантов аренды').search-page__paginator
    +footer({})
