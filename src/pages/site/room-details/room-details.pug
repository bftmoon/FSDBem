extends ../layout/layout

block main
  include ../../../kit/blocks/iconed-list/iconed-list
  include ../../../kit/blocks/feedbacks-chart/feedbacks-chart
  include ../../../kit/blocks/feedback/feedback
  include ../../../kit/blocks/bullet-list/bullet-list
  include ../../../kit/blocks/calculator-card/calculator-card

  main.details-page
    .details-page__images
      img(src=require(`./imgs/room-details-0.jpg`).default alt = "room").details-page__image-1
      img(src=require(`./imgs/room-details-1.jpg`).default alt = "room").details-page__image-2
      img(src=require(`./imgs/room-details-2.jpg`).default alt = "room").details-page__image-3
    .details-page__details
      .details-page__info
        h2.details-page__title Сведения о номере
        +iconed-list([
          {
            icon: "insert_emoticon",
            title: "Комфорт",
            description: "Шумопоглощающие стены"
          },
          {
            icon: "location_city",
            title: "Удобство",
            description: "Окно в каждой из спален"
          },
          {
            icon: "whatshot",
            title: "Уют",
            description: "Номер оснащён камином"
          },
        ])
      .details-page__chart
        h2.details-page__title Впечатления от номера
        +feedbacks-chart
      .details-page__feedbacks
        .details-page__feedbacks-header
          h2.details-page__title Отзывы посетителей номера
          .details-page__feedbacks-count 2 отзыва
        +feedback({
          img: {
            src: require("./imgs/avatar-1.jpg").default,
            alt: "avatar"
          },
          name: "Мурад Сарафанов",
          time: "5 дней назад",
          text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
          like: {
            count: 12,
            active: true
          }
        })
        +feedback({
          img: {
            src: require("./imgs/avatar-2.jpg").default,
            alt: "avatar"
          },
          name: "Патрисия Стёклышкова",
          time: "Неделю назад",
          text: "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент.",
          like: {
            count: 2,
          }
        })
          if index < feedbacks.length - 1
            .details-page__feedbacks-separator
      .details-page__rules
        h2.details-page__list-title Правила
        +bullet-list({
          items: [
            "Нельзя с питомцами",
            "Без вечеринок и меропреятий",
            "Время прибытия — после 13:00, а выезд до 12:00"
          ]
        })
      .details-page__cancel-info
        h2.details-page__title Отмена
        | Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
      .details-page__card
        +calculator-card({
          room: {
            number: 888,
            price: 9990,
            isLux: true
          },
          options: {
            startDate: 1566162000000,
            endDate: 1566507600000,
            daysCount: 4,
            guests: [2, 1, 0]
          },
          costs: {
            service: 0,
            discount: 2179,
            overService: 300,
          }
        })
