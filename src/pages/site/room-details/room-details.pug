extends ../layout/layout

block keywords
  meta(name="keywords" content="отель, toxin, описание номера, бронирование")
block description
  meta(name="description" content="Описание выбранного номера в отеле Toxin")

block main
  include ../../../kit/blocks/iconed-list/iconed-list
  include ../../../kit/blocks/feedbacks-chart/feedbacks-chart
  include ../../../kit/blocks/feedback/feedback
  include ../../../kit/blocks/bullet-list/bullet-list
  include ../../../kit/blocks/calculator-card/calculator-card

  article.room-details
    section.room-details__images
      img(src=require(`./imgs/room-details-0.jpg`).default alt = "room").room-details__image-1
      img(src=require(`./imgs/room-details-1.jpg`).default alt = "room").room-details__image-2
      img(src=require(`./imgs/room-details-2.jpg`).default alt = "room").room-details__image-3
    section.room-details__details
      .room-details__info
        h2.room-details__info-title Сведения о номере
        +iconed-list([
          {
            icon: "face",
            title: "Комфорт",
            description: "Шумопоглощающие стены"
          },
          {
            icon: "city",
            title: "Удобство",
            description: "Окно в каждой из спален"
          },
          {
            icon: "fire",
            title: "Уют",
            description: "Номер оснащён камином"
          },
        ])
      .room-details__chart
        h2.room-details__chart-title Впечатления от номера
        +feedbacks-chart
      ul.room-details__feedbacks
        .room-details__feedbacks-header
          h2.room-details__feedbacks-title Отзывы посетителей номера
          .room-details__feedbacks-count 2 отзыва
        li.room-details__feedback
          +feedback({
            img: {
              src: require("./imgs/avatar-1.jpg").default,
              alt: "avatar"
            },
            name: "Мурад Сарафанов",
            time: "5 дней назад",
            text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
            like: {
              count: 12,
              active: true
            }
          })
        li.room-details__feedback
          +feedback({
            img: {
              src: require("./imgs/avatar-2.jpg").default,
              alt: "avatar"
            },
            name: "Патрисия Стёклышкова",
            time: "Неделю назад",
            text: "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент.",
            like: {
              count: 2,
            }
          })
      .room-details__rules
        h2.room-details__rules-title Правила
        +bullet-list({
          items: [
            "Нельзя с питомцами",
            "Без вечеринок и мероприятий",
            "Время прибытия — после 13:00, а выезд до 12:00"
          ]
        })
      .room-details__cancel-info
        h2.room-details__cancel-title Отмена
        | Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
      .room-details__card
        +calculator-card({
          room: {
            number: 888,
            price: 9990,
            isLux: true
          },
          options: {
            startDate: 1566162000000,
            endDate: 1566507600000,
            daysCount: 4,
            guests: [2, 1, 0]
          },
          costs: {
            service: 0,
            discount: 2179,
            overService: 300,
          }
          })
