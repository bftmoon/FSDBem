include ../../../kit/blocks/header/header
include ../../../kit/blocks/footer/footer

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="initial-scale=1.0, width=device-width")
    block keywords
    block description
    link(rel="icon" type="image/svg" href=require("../layout/images/favicon.svg").default)
    link(rel="mask-icon" href=require("../layout/images/safari-pinned-tab.svg").default color="#c28ad1")
    title Toxin

  body.layout
    - const {home, links, login, registration} = require(`../layout/json/header.json`)
    +header({home, links, login, registration})
    main.layout__content
      block main
      - const {tagline, menu, subscribe, copyright} = require(`../layout/json/footer.json`)
    +footer({tagline, menu, subscribe, copyright})
