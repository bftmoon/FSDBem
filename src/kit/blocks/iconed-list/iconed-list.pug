// [{icon(material name), title, description}]
mixin iconed-list(items)
  .iconed-list
    for item, index in items
      .iconed-list__item
        i.material-icons.iconed-list__icon=item.icon
        .iconed-list__text
          .iconed-list__title=item.title
          .iconed-list__description=item.description
      if index < items.length - 1
        .iconed-list__separator
