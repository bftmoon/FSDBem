include ../input/input
include ../button/button

mixin login-card
  form&attributes(attributes).login-card.js-login-card
    h1.login-card__title Войти
    .login-card__item
      +input()(
        placeholder="Email"
        type="email"
        name="email"
      )
    .login-card__item
      +input()(
        placeholder="Пароль"
        type="password"
        name="password"
      )
    .login-card__submit
      +button("Константин Константинович Константинопольский", {isArrowed: true})
    .login-card__offer
      .login-card__registration-text Константин Константинович Константинопольский
      .js-login-card__registration-button.login-card__registration-button
        +button("Константин Константинович Константинопольский", {isFlat: true, isConstMin: true})(type="button")
