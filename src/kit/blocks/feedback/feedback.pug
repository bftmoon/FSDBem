include ../likeButton/likeButton
// {img: {src, alt}, name, time, text, like: {count, active}
mixin feedback(map)
  .feedback
    img.feedback__img(src=map.img.src alt=map.img.alt)
    div
      .feedback__user=map.name
      div=map.time
    .feedback__like
      +likeButton(map.like.count)(checked=map.like.active)
    div=map.text
