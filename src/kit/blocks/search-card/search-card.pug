include ../dropdown-date/dropdown-date
include ../guests-dropdown/guests-dropdown
include ../button/button

mixin search-card
  form.search-card.js-search-card&attributes(attributes)
    h1.search-card__header Найдём номера под ваши пожелания
    .search-card__date
      +dropdown-date([
        {title: "Прибытие"},
        {title: "Выезд"},
      ])
    .search-card__guests
      +guests-dropdown({title: "Гости"})
    .search-card__submit-button
      +button("Подобрать номер", {isArrowed: true})
