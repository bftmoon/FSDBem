include ../checkable-item/checkable-item

// items: {text, attributes:{}, description?}]
mixin checkbox-list({items})
  .checkbox-list
    each item in items
      .checkbox-list__item(class=item.description ? "checkbox-list__item_type_rich" : "")
        +checkable-item({
          type: "checkbox",
          text: item.text,
          description: item.description
        })&attributes(item.attributes)
